<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label text="DECK : nbcartes" />
            <Separator />
            <ImageView fx:id="imageDeck" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <Separator orientation="VERTICAL" />
      <VBox fx:id="conteneurMain" alignment="CENTER">
         <children>
            <Separator />
            <HBox fx:id="conteneurMainTop" alignment="CENTER" fillHeight="false" maxHeight="50.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox fx:id="vueJoueurCourant" alignment="CENTER">
                     <children>
                        <Label fx:id="nomJoueurCourant" text="NomJoueurCourant " HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <ImageView fx:id="logoArgent" fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="labelNbArgent" text="Gold : 0" />
                        <ImageView fx:id="logoPointsRails" fitHeight="10.0" fitWidth="10.0" layoutX="10.0" layoutY="42.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="labelNbPointsRails" text="Rails : 0" />
                        <ImageView fx:id="logoJetonsRails" fitHeight="10.0" fitWidth="10.0" layoutX="61.0" layoutY="42.0" pickOnBounds="true" preserveRatio="true">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </ImageView>
                        <Label fx:id="labelNbJetonsRails" text="Ferraille : 0" />
                     </children>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </HBox>
                  <Label fx:id="instruction" text="Instruction" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Label>
                  <Button fx:id="boutonPasser" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false" text="Passer" />
               </children>
            </HBox>
            <Separator layoutX="10.0" layoutY="10.0" />
            <HBox fx:id="conteneurMainBottom" alignment="CENTER" VBox.vgrow="ALWAYS" />
            <Separator />
         </children>
      </VBox>
      <Separator orientation="VERTICAL" />
      <Separator orientation="VERTICAL" />
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0">
         <children>
            <Label text="DEFAUSSE : nbcartes" />
            <Separator />
            <ImageView fx:id="imageDefausse" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
   </children>
