<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" HBox.hgrow="NEVER">
         <children>
            <ImageView fx:id="logoJeu" fitHeight="25.0" fitWidth="129.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logoTrains.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="nomJoueurCourant" alignment="CENTER" contentDisplay="CENTER" text="JoueurCourant">
                     <font>
                        <Font name="Showcard Gothic" size="25.0" />
                     </font>
                     <effect>
                        <Glow level="0.18" />
                     </effect>
                  </Label>
                  <Label fx:id="instruction" alignment="CENTER" contentDisplay="CENTER" text="INSTRUCTION" textFill="#f8f8f8">
                     <font>
                        <Font name="Monospaced Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
